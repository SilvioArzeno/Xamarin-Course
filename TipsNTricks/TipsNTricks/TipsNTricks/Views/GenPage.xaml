<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TipsNTricks.Views.GenPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             Title="Generation">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry Style="{StaticResource RegularEntry}"
                    Placeholder="Enter the year you were born"
                   Text="{Binding EnteredYear}"
                   Keyboard="Numeric"
                   ios:Entry.AdjustsFontSizeToFitWidth="True"/>
            <Button  Style="{StaticResource SubmitButton}"
                    Command="{Binding ChangeLabelCommand}"
                   />
            <Label  Style="{StaticResource AlertLabel}"
                    Text="{Binding GenerationResult}"
                   IsVisible="{Binding IsLabelVisible}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>